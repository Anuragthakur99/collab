{
  "name": "project-collaboration-tool",
  "version": "1.0.0",
  "description": "Full-stack project collaboration platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
